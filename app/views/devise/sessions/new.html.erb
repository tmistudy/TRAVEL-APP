<% if alert %>
  <% flash[:notice_fail] = alert %>
  <%= render "shared/error" %>
<% end %>
<div class="regist-mypage">
  <div class="regist-container">
    <p>ログイン</p>
    <div class="regist-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field required-field">
          <div class="required"><span>必須</span></div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス" %>
        </div>

        <div class="field required-field">
          <div class="required"><span>必須</span></div>
          <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>  
  </div>
</div>
