<header>
  <div class="header-left" >
    <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png"),:travels %>
    <%= form_with url: rooms_search_path, local: true, method: :get , class: "search" do |f| %>
      <%= f.text_field :area ,placeholder: "\uf3c5 エリア",class: "fa" %>
    <% end %>
    <%= form_with url: rooms_search_path, local: true, method: :get, class: "search" do |f| %>
      <%= f.text_field :word ,placeholder: "\uf002 キーワード",class: "fa" %>
    <% end %>
  </div>
  <div class="header-right">
    <div class="header-right-link">
      <% if user_signed_in? %>
        <div class="header-name">
          <%= @profile.name %>
        </div>
        <div class="header-image">
          <%= image_tag @profile.my_img.url,class: "header-my-img" %>
        </div>
        <ul class="header-menu menu-display" style="display: none;">
          <li><%= link_to "ルーム登録",rooms_new_path %></li>
          <li><%= link_to "予約済みルーム一覧" ,reservations_rooms_path %></li>
          <li><%= link_to "登録済みルーム一覧" ,rooms_regist_path %></li>
          <li><%= link_to "設定" ,mypages_account_path %></li>
          <li><%= link_to "ログアウト" ,destroy_user_session_path %></li>
        </ul>
      <% else %>
        <%= link_to "ログイン", "/users/sign_in" ,{class: " button login"} %>
        <%= link_to "登録する", "/users/sign_up" ,{class: "button regist"} %>
      <% end %>
    </div>
  </div>
</header>
<script>
$(function() {
  $('.header-my-img').click(function() {
    $(".header-menu").toggle(1500);
  })
});
</script>
