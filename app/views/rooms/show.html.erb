<%= render "shared/error" %>
<div class="room-show">
  <div class="room-show-container">
    <div class="room-show-left">
      <%= image_tag @room.image.url,class: "room-show-img" %>
      <div class="room-show-content">
        <div class="room-show-icon">
          <%= image_tag @mypage.my_img.url,class: "header-my-img" %>
        </div>
        <div class="room-show-detail">
          <p><%= @room.room_name %></p>
          <p><%= @room.address %></p>
        </div>
      </div>
      <div class="room-show-intro">
        <p><%= @room.introduction %></p>
      </div>
    </div>
    <div class="room-show-right">
      <div class="show-right-content">
        <div class="show-right-price"><p>¥ <%= @room.price %> / 日</p></div>
          <div class="show-right-form">
            <%= form_with url: reservations_new_path  do |f| %>
              <%= f.label :start_date, "開始日" %>
              <div><%= f.date_field :start_date %></div>
              <%= f.label :end_date,"終了日" %>
              <div><%= f.date_field :end_date %></div>
              <%= f.label :people, "人数"%>
              <div><%= f.text_field :people %></div>
              <div>
                <% if user_signed_in? %>
                  <%= f.submit "予約する" %>
                <% else %>
                  <%= link_to "ログイン", "/users/sign_in" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div> 
</div>
